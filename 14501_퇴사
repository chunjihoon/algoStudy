https://www.acmicpc.net/problem/14501

#include <iostream>
#define max_int 16

using namespace std;

int n, t[max_int], p[max_int], d[max_int], result;

int max(int a, int b){
    return a > b ? a : b;
}

int main(){
    scanf("%d", &n);
    for(int i=1; i<=n; i++){
        scanf("%d %d", &t[i], &p[i]);
    }

    for(int i=1; i<=n + 1; i++){
        for(int j=1; j<i; j++){
            d[i] = max(d[i], d[j]);
            if(j + t[j] == i){
                d[i] = max(d[i], d[j] + p[j]);
            }
        }
        result = max(result, d[i]);
    }
    printf("%d\n", result);
}
